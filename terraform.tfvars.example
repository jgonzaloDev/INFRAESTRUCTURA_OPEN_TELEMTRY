# ============================================================
# EJEMPLO DE ARCHIVO terraform.tfvars
# ============================================================
# Copia este archivo como terraform.tfvars y completa los valores

# Azure Configuration
subscription_id      = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
tenant_id            = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
location             = "eastus2"
resource_group_name  = "rg-dojo-etapa4"

# Virtual Network
vnet_name = "vnet-dojo-etapa4"

# App Service Plans
app_service_plan_name     = "plan-backend-springboot"
app_service_plan_name_web = "plan-frontend-react"

# App Services
app_service_name     = "app-backend-springboot"
app_service_name_web = "app-frontend-react"

# SQL Server
sql_server_name     = "sql-dojo-etapa4"
sql_admin_login     = "sqladmin"
sql_admin_password  = "YourSecurePassword123!"
database_name       = "dbDojo"

# Key Vault & Storage
key_vault_name       = "kv-dojo-etapa4"
storage_account_name = "stdojoetapa4"

# Certificate (Application Gateway)
cert_data     = "base64_encoded_certificate_data"
cert_password = "certificate_password"

# GitHub OIDC
azure_client_id      = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
github_principal_id  = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# User Admin
admin_user_object_id = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Observability
log_analytics_workspace_name = "law-dojo-observability"
application_insights_name    = "appi-dojo-observability"

# Opcional: Habilitar Elasticsearch y Kibana
enable_elasticsearch = false  # Cambia a true si deseas usar Elasticsearch/Kibana
